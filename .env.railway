# =============================================================================
# RAILWAY DEPLOYMENT ENVIRONMENT VARIABLES
# Complete Autonomous Trading System with AG-UI, MCP, Farms, Goals, Wallets
# =============================================================================

# =============================================================================
# CORE APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# Application Settings
APP_NAME=autonomous-trading-system
APP_VERSION=1.0.0
APP_PORT=8000
APP_HOST=0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION - SUPABASE
# =============================================================================
# Primary Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[password]@[project-ref].supabase.co:5432/postgres?sslmode=require
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_ANON_KEY=[your-anon-key]
SUPABASE_SERVICE_ROLE_KEY=[your-service-role-key]

# Database Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION (Railway Redis)
# =============================================================================
REDIS_URL=redis://default:[password]@[redis-host]:[port]
REDIS_HOST=[redis-host]
REDIS_PORT=6379
REDIS_PASSWORD=[redis-password]
REDIS_DB=0
REDIS_SSL=true

# Cache Settings
CACHE_TTL=3600
CACHE_PREFIX=ats:
CACHE_MAX_SIZE=1000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=[generate-strong-secret-key]
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Security
API_KEY=[generate-api-key]
CORS_ORIGINS=https://[your-domain].railway.app,https://[your-custom-domain]
CORS_ALLOW_CREDENTIALS=true

# Session Security
SESSION_SECRET=[generate-session-secret]
SECURE_COOKIES=true
CSRF_PROTECTION=true

# =============================================================================
# LLM & AI CONFIGURATION
# =============================================================================
# OpenRouter Configuration
OPENROUTER_API_KEY=[your-openrouter-api-key]
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# LLM Settings
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1
LLM_REQUEST_TIMEOUT=60
LLM_MAX_RETRIES=3
LLM_CACHE_ENABLED=true

# Alternative LLM Providers (Optional)
OPENAI_API_KEY=[your-openai-api-key]
ANTHROPIC_API_KEY=[your-anthropic-api-key]
GOOGLE_AI_API_KEY=[your-google-ai-api-key]

# =============================================================================
# TRADING & EXCHANGE CONFIGURATION
# =============================================================================
# Hyperliquid Configuration
HYPERLIQUID_API_KEY=[your-hyperliquid-api-key]
HYPERLIQUID_SECRET_KEY=[your-hyperliquid-secret]
HYPERLIQUID_TESTNET=false
HYPERLIQUID_BASE_URL=https://api.hyperliquid.xyz

# Exchange Settings
TRADING_ENABLED=true
PAPER_TRADING_MODE=false
MAX_POSITION_SIZE=1000
MAX_DAILY_TRADES=50
RISK_MANAGEMENT_ENABLED=true

# Wallet Configuration
MASTER_WALLET_PRIVATE_KEY=[your-master-wallet-private-key]
WALLET_DERIVATION_PATH=m/44'/60'/0'/0
MULTI_SIG_THRESHOLD=2
GAS_LIMIT=21000
GAS_PRICE_MULTIPLIER=1.1

# =============================================================================
# BLOCKCHAIN & WEB3 CONFIGURATION
# =============================================================================
# Ethereum Configuration
ETH_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/[your-alchemy-key]
ETH_CHAIN_ID=1
ETH_GAS_STATION_API_KEY=[your-gas-station-api-key]

# Polygon Configuration
POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/[your-alchemy-key]
POLYGON_CHAIN_ID=137

# Arbitrum Configuration
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/[your-alchemy-key]
ARBITRUM_CHAIN_ID=42161

# =============================================================================
# MARKET DATA & EXTERNAL APIS
# =============================================================================
# CoinGecko API
COINGECKO_API_KEY=[your-coingecko-api-key]
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3

# Alpha Vantage API
ALPHA_VANTAGE_API_KEY=[your-alpha-vantage-api-key]

# News & Sentiment APIs
NEWS_API_KEY=[your-news-api-key]
TWITTER_BEARER_TOKEN=[your-twitter-bearer-token]
REDDIT_CLIENT_ID=[your-reddit-client-id]
REDDIT_CLIENT_SECRET=[your-reddit-client-secret]

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/tmp/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Sentry Configuration (Optional)
SENTRY_DSN=[your-sentry-dsn]
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=[your-release-version]

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=false

# =============================================================================
# WEBSOCKET & REAL-TIME CONFIGURATION
# =============================================================================
# WebSocket Settings
WEBSOCKET_ENABLED=true
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# Server-Sent Events
SSE_ENABLED=true
SSE_MAX_CONNECTIONS=500
SSE_HEARTBEAT_INTERVAL=30

# =============================================================================
# AG-UI PROTOCOL CONFIGURATION
# =============================================================================
# AG-UI Settings
AG_UI_ENABLED=true
AG_UI_PROTOCOL_VERSION=1.0
AG_UI_MAX_CONTEXT_LENGTH=8192
AG_UI_STREAMING_ENABLED=true

# Generative UI Configuration
GENERATIVE_UI_ENABLED=true
UI_GENERATION_MODEL=anthropic/claude-3.5-sonnet
UI_GENERATION_TIMEOUT=30

# =============================================================================
# FARM SYSTEM CONFIGURATION
# =============================================================================
# Farm Management
MAX_FARMS=10
MAX_AGENTS_PER_FARM=20
FARM_PERFORMANCE_TRACKING=true
INTER_FARM_COMMUNICATION=true

# Farm Strategies
TREND_FOLLOWING_FARM_ENABLED=true
BREAKOUT_FARM_ENABLED=true
PRICE_ACTION_FARM_ENABLED=true
ARBITRAGE_FARM_ENABLED=false
SCALPING_FARM_ENABLED=false

# =============================================================================
# GOAL SYSTEM CONFIGURATION
# =============================================================================
# Goal Management
MAX_ACTIVE_GOALS=50
GOAL_COMPLETION_TIMEOUT=86400
AUTONOMOUS_GOAL_CREATION=true
GOAL_HIERARCHY_DEPTH=5

# Goal Types
PROFIT_GOALS_ENABLED=true
TRADE_COUNT_GOALS_ENABLED=true
PERFORMANCE_GOALS_ENABLED=true
LEARNING_GOALS_ENABLED=true

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
# Agent Management
MAX_AGENTS=100
AGENT_LIFECYCLE_MANAGEMENT=true
AGENT_PERFORMANCE_TRACKING=true
AGENT_LEARNING_ENABLED=true

# Agent Specialization
DARVAS_BOX_AGENTS=10
WILLIAMS_ALLIGATOR_AGENTS=10
ELLIOTT_WAVE_AGENTS=5
RENKO_AGENTS=8
HEIKIN_ASHI_AGENTS=8

# Agent Communication
AGENT_TO_AGENT_COMMUNICATION=true
SWARM_INTELLIGENCE_ENABLED=true
COLLECTIVE_DECISION_MAKING=true

# =============================================================================
# PERFORMANCE & SCALING CONFIGURATION
# =============================================================================
# Application Performance
WORKERS=4
WORKER_TIMEOUT=300
WORKER_MAX_REQUESTS=1000
WORKER_MAX_REQUESTS_JITTER=50

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Resource Limits
MAX_MEMORY_USAGE=2GB
MAX_CPU_USAGE=80
CONNECTION_POOL_SIZE=50

# =============================================================================
# BACKUP & RECOVERY CONFIGURATION
# =============================================================================
# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=[your-backup-encryption-key]

# Recovery Settings
AUTO_RECOVERY_ENABLED=true
RECOVERY_TIMEOUT=300
CIRCUIT_BREAKER_ENABLED=true

# =============================================================================
# DEVELOPMENT & TESTING (Production Overrides)
# =============================================================================
# Testing Configuration
TESTING_MODE=false
MOCK_EXTERNAL_APIS=false
FAKE_TRADING_ENABLED=false

# Development Tools
HOT_RELOAD=false
DEBUG_TOOLBAR=false
PROFILING_ENABLED=false

# =============================================================================
# RAILWAY SPECIFIC CONFIGURATION
# =============================================================================
# Railway Integration
RAILWAY_ENVIRONMENT=production
RAILWAY_SERVICE_NAME=autonomous-trading-system
RAILWAY_STATIC_URL=/static
RAILWAY_HEALTH_CHECK_PATH=/health

# Resource Configuration
RAILWAY_MEMORY_LIMIT=2048
RAILWAY_CPU_LIMIT=1000
RAILWAY_DISK_LIMIT=10GB

# Domain Configuration
RAILWAY_DOMAIN=[your-railway-domain].railway.app
CUSTOM_DOMAIN=[your-custom-domain]
SSL_REDIRECT=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# System Features
MASTER_WALLET_ENABLED=true
FARM_SYSTEM_ENABLED=true
GOAL_SYSTEM_ENABLED=true
AUTONOMOUS_AGENTS_ENABLED=true
AG_UI_ENABLED=true
MCP_BACKEND_ENABLED=true

# Trading Features
LIVE_TRADING_ENABLED=false
PAPER_TRADING_ENABLED=true
BACKTESTING_ENABLED=true
STRATEGY_OPTIMIZATION_ENABLED=true

# AI Features
MULTI_LLM_ENABLED=true
AGENT_LEARNING_ENABLED=true
SWARM_INTELLIGENCE_ENABLED=true
PREDICTIVE_ANALYTICS_ENABLED=true

# =============================================================================
# EMERGENCY CONTROLS
# =============================================================================
# Emergency Settings
EMERGENCY_STOP_ENABLED=false
KILL_SWITCH_ENABLED=false
TRADING_HALT_ENABLED=false
SYSTEM_MAINTENANCE_MODE=false

# Risk Controls
MAX_DRAWDOWN_THRESHOLD=0.05
DAILY_LOSS_LIMIT=1000
POSITION_SIZE_LIMIT=10000
LEVERAGE_LIMIT=3

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Email Notifications
SMTP_HOST=[your-smtp-host]
SMTP_PORT=587
SMTP_USERNAME=[your-smtp-username]
SMTP_PASSWORD=[your-smtp-password]
FROM_EMAIL=noreply@[your-domain]

# Webhook Notifications
WEBHOOK_URL=[your-webhook-url]
WEBHOOK_SECRET=[your-webhook-secret]

# Slack Integration
SLACK_WEBHOOK_URL=[your-slack-webhook]
SLACK_CHANNEL=#trading-alerts

# =============================================================================
# END OF CONFIGURATION
# =============================================================================